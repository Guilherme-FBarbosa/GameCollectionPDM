<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- PopupTheme do Toolbar no modo escuro (overflow menu) -->
    <style name="ThemeOverlay.ProjetoPDM.Dark.Popup" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/dark_popup_bg</item>
        <item name="android:textColorPrimary">@color/dark_popup_text</item>
        <item name="android:textColorSecondary">@color/dark_popup_text</item>
    </style>

    <!-- AlertDialog no modo escuro para AppCompat (usado pelo seu código em MainActivity) -->
    <style name="ThemeOverlay.ProjetoPDM.Dark.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dark_popup_bg</item>
        <item name="android:textColorPrimary">@color/dark_popup_text</item>
        <item name="android:textColorSecondary">@color/dark_popup_text</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.ProjetoPDM.Dark.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.ProjetoPDM.Dark.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.ProjetoPDM.Dark.DialogButton</item>
    </style>

    <!-- Botões do dialog (OK/Cancelar/Limpar/Aplicar) em azul claro no modo escuro -->
    <style name="Widget.ProjetoPDM.Dark.DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dark_action_blue</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
